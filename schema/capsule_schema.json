{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BNU_Matrix_Capsule",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "version": { "type": "string", "default": "2.0" },
    "logic_core": {
      "type": "string",
      "enum": ["StandardChat", "LiveLinkVision", "ParadigmSynthesis", "Geospatial"]
    },
    "prompt_template": { "type": "string" },
    "capabilities": {
      "type": "array",
      "items": { "type": "string" }
    },
    "grounding_source": {
      "type": "object",
      "properties": {
        "google_search": { "type": "boolean" },
        "google_maps": { "type": "boolean" }
      }
    }
  }
}